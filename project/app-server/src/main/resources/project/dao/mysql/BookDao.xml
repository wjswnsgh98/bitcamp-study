<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.dao.BookDao">

  <!-- 결과 레코드의 컬럼 값을 자바 객체에 어떻게 담을 것인지 설정한다. -->
  <resultMap type="book" id="bookMap">
    <id     column="book_no"        property="no"/>
    <result column="book_title"     property="bookTitle"/>
    <result column="author"         property="author"/>
    <result column="publisher"      property="publisher"/>
    <result column="content"        property="content"/>
    <result column="count"          property="count"/>
    <result column="photo"          property="photo"/>
  </resultMap>

  <insert id="insert" parameterType="book">
    insert into project_book(book_title,author,publisher,content,photo,count)
    values(#{bookTitle},#{author},#{publisher},#{content},#{photo},#{count})
  </insert>
  
  <select id="findAll" resultMap="bookMap">
    select
      book_no,
      book_title,
      author,
      publisher,
      content,
      count,
      photo
    from
      project_book
    order by
      book_title desc
  </select>
  
  <select id="findBy" parameterType="int" resultMap="bookMap">
    select
      book_no,
      book_title,
      author,
      publisher,
      content,
      count,
      photo
    from
      project_book
    where
      book_no=#{no}
  </select>

  <select id="findByTitle" parameterType="String" resultMap="bookMap">
    select
      book_no,
      book_title,
      author,
      publisher,
      content,
      count,
      photo
    from
      project_book
    where
      book_title=#{bookTitle}
  </select>
  
  <update id="update" parameterType="book">
    update project_book set
      book_title=#{bookTitle}
      ,author=#{author}
      ,publisher=#{publisher}
      ,content=#{content}
    <if test="photo != null">
      ,photo=#{photo}
    </if>
    where 
      book_no=#{no}
  </update>

  <update id="updateIncreaseCount" parameterType="String">
    update project_book set
      count=count + 1
    where
      book_title=#{bookTitle}
  </update>

  <update id="updateDecreaseCount" parameterType="String">
    update project_book set
      count=count - 1
    where
      book_title=#{bookTitle}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from project_book
    where 
      book_no=#{no}
  </delete>
</mapper>